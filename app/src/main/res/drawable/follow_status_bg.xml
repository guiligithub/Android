<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/common_btn_radius" />
            <solid android:color="@color/colorContent"/>
            <stroke android:color="@color/colorContent"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/common_btn_radius" />
            <gradient
                android:angle="0"
                android:centerColor="@color/bg_center_color"
                android:centerX="0.7"
                android:endColor="@color/bg_end_color"
                android:startColor="@color/bg_start_color"
                android:type="linear" />
        </shape>
    </item>
</selector>