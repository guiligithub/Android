<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/icon_chat_other_tip" />

    <TextView
        android:id="@+id/chat_other_tip_tv_content"
        style="@style/AppText"
        android:layout_width="0dp"
        android:textColor="#874CFC"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="60dp"
        android:text="@string/not_anchor_tips"
        android:layout_marginTop="190dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <LinearLayout
        android:id="@+id/chat_other_tip_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="104dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@id/imageView5"
        app:layout_constraintStart_toStartOf="@id/imageView5">

        <Button
            android:id="@+id/vip_tip_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:layout_height="40dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/chat_other_cancel_bg"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/vip_tip_btn_confirm"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="50dp"
            android:background="@drawable/chat_other_confirm_bg"
            android:text="@string/become_vip" />
    </LinearLayout>

    <TextView
        android:id="@+id/chat_other_tip_tv_sub_content"
        android:layout_width="0dp"
        style="@style/AppText"
        android:textSize="@dimen/sub_title_size"
        android:text="@string/privileges"
        android:textColor="#874CFC"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/chat_other_tip_ll"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5" />
</androidx.constraintlayout.widget.ConstraintLayout>