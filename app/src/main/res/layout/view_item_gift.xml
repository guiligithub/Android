<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_item_gift_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gift_item_bg">


        <ImageView
            android:id="@+id/view_item_git_iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/view_item_git_iv_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="start"
            android:visibility="gone"
            app:srcCompat="@mipmap/icon_hot" />


        <TextView
            android:id="@+id/view_item_git_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_size"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#DBD8D8"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/view_item_git_iv_icon"
            app:layout_constraintStart_toStartOf="@+id/view_item_git_iv_icon"
            app:layout_constraintTop_toBottomOf="@+id/view_item_git_iv_icon" />

        <TextView
            android:id="@+id/view_item_git_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_size"
            android:gravity="center_vertical"
            android:textColor="#A054FE"
            android:text="1314"
            android:drawablePadding="3dp"
            app:layout_constraintEnd_toEndOf="@+id/view_item_git_iv_icon"
            app:layout_constraintStart_toStartOf="@+id/view_item_git_iv_icon"
            app:layout_constraintTop_toBottomOf="@+id/view_item_git_tv_name"
            app:drawableStartCompat="@mipmap/icon_item_diamonds" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
