<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!---->
    <FrameLayout
        android:id="@+id/rlyout"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/tab_background_ridus">

        <com.iskyun.im.widget.SlidingTabLayout
            android:id="@+id/feedback_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            app:tl_indicator_color="@color/colorAccent"
            app:tl_indicator_corner_radius="@dimen/toolbar_height"
            app:tl_indicator_height="@dimen/toolbar_height"
            app:tl_indicator_margin_top="0dp"
            app:tl_indicator_style="BLOCK"
            app:tl_tab_space_equal="true"
            app:tl_textBold="SELECT"
            app:tl_textSelectColor="@color/white"
            app:tl_textSize="@dimen/content_size"
            app:tl_textUnselectColor="@color/grey" />

    </FrameLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/feedback_vPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/content_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:overScrollMode="never" />


</LinearLayout>