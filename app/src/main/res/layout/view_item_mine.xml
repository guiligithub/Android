<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--android:layout_height="?android:actionBarSize"-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <ImageView
            android:id="@+id/mine_item_iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mine_item_tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSubTitle"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sub_title_size"
            app:layout_constraintLeft_toLeftOf="@+id/mine_item_iv_icon"
            app:layout_constraintTop_toBottomOf="@+id/mine_item_iv_icon"
            app:layout_constraintRight_toRightOf="@+id/mine_item_iv_icon"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
